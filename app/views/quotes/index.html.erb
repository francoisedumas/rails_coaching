<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1>Quotes from API</h1>
  <div data-controller="quotes"></div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Quotes</h1>
    <%= link_to "New quote",
                new_quote_path,
                class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium",
                data: { turbo_frame: dom_id(Quote.new) } %>
  </div>

  <%= turbo_frame_tag Quote.new %>

  <%= turbo_stream_from "quotes" %>

  <div id="quotes" class="min-w-full">
    <%= render @quotes %>
  </div>
</div>
