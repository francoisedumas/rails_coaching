<div class="bg-white px-4 py-3 flex items-center justify-between sm:px-6">
  <% if @pagy.pages > 1 %>
    <div class="pagination-xs flex-1 flex justify-between sm:hidden">
      <% if @pagy.prev %>
        <%= link_to "previous", request.path + "?page=#{@pagy.prev}" %>
      <% end %>
      <% if @pagy.next %>
        <%= link_to "next", request.path + "?page=#{@pagy.next}" %>
      <% end %>
    </div>
  <% end %>
  <div class="flex-1 flex items-center justify-between">
    <div>
      <p class="text-sm text-gray-700">
        <%== pagy_info(@pagy) %>
      </p>
    </div>
    <% if @pagy.pages > 1 %>
      <div>
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div>
